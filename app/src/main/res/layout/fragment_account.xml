<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    android:id="@+id/fragment_account"
    >

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <ImageView
                    android:id="@+id/img_background"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_background_avt" />
            </FrameLayout>

            <ImageButton
                android:id="@+id/img_avt"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_gravity="center"
                android:layout_marginTop="-100dp"
                android:background="@drawable/circle_shape"
                android:scaleType="centerInside"
                android:src="@drawable/img_background_avt" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="Andrew Smith"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.476" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="MSSV"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="@dimen/margin_small"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CCCCCC" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:text="Tên"
                    android:textSize="@dimen/text_size_h4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:text="Dương Quang Tuyến"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:background="@color/main_color" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:text="Email"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/text_size_h4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:text="kasewdqt@gmail.com"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:text="Số điện thoại"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/text_size_h4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:text="0911111111"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:text="Địa chỉ"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/text_size_h4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:text="Đà nẵng"
                    android:textSize="@dimen/text_size_h3"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:background="@color/gray" />



            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="326dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/custom_rounded_edit_text"
                    android:drawableLeft="@drawable/ic_home_2"
                    android:drawablePadding="8dp"
                    android:gravity="center|left"
                    android:paddingStart="20dp"
                    android:paddingTop="8dp"
                    android:text="Cập nhật thông tin cá nhân"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    app:iconPadding="15dp" />

                <Button
                    android:id="@+id/btn_update_role"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/custom_rounded_edit_text"
                    android:drawableLeft="@drawable/ic_home_2"
                    android:drawablePadding="8dp"
                    android:gravity="center|left"
                    android:paddingTop="8dp"
                    android:paddingStart="20dp"
                    android:text="Quản lí ví"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    app:iconPadding="15dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/custom_rounded_edit_text"
                    android:drawableLeft="@drawable/ic_home_2"
                    android:drawablePadding="8dp"
                    android:gravity="center|left"
                    android:paddingStart="20dp"
                    android:paddingTop="8dp"
                    android:text="Thay đổi mật khẩu"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    app:iconPadding="15dp" />

                <Button
                    android:id="@+id/btn_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/custom_rounded_edit_text"
                    android:drawableLeft="@drawable/ic_home_2"
                    android:drawablePadding="8dp"
                    android:gravity="center|left"
                    android:paddingStart="20dp"
                    android:paddingTop="8dp"
                    android:text="Đánh giá ứng dụng"
                    android:textColor="@color/black"
                    app:backgroundTint="@null"
                    app:iconPadding="15dp" />

                <Button
                    android:id="@+id/btn_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_mid"
                    android:layout_marginTop="@dimen/margin_small"
                    android:background="@drawable/custom_rounded_button"
                    android:text="Đăng xuất"
                    app:backgroundTint="@null" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</RelativeLayout>